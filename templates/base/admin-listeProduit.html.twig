{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Liste des Produits
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste des Produits</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Nom</th>
								<th scope="col">Description</th>
								<th scope="col">Prix</th>
                                <th scope="col">Image</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for lampe in lampes %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ lampe.nom | capitalize }}</td>
									<td>{{ lampe.description | capitalize }}</td>
									<td>{{ lampe.prix}}</td>
                                    <td>{{ lampe.image}}</td>
                                    <td><a href="{{path("app_modifier_produit",{'id':lampe.id})}}"><i class="bi bi-pen-fill text-dark"></i></a></td>
                                    <td><a href="{{path("app_supprimer_produit",{'id':lampe.id})}}"><i class="bi bi-trash-fill text-dark"></i></a></td>
                                </tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
